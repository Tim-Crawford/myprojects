{
	"extends": [
		"tslint-microsoft-contrib",
		"tslint-config-prettier"
	],
	"rules": {
		"mocha-no-side-effect-code": false,
		"missing-jsdoc": false,
		"no-relative-imports": false,
		"export-name": false,
		"promise-function-async": false,
		"no-void-expression": false,
		"no-redundant-jsdoc": false,
		"prefer-type-cast": false,
		"triple-equals": true,
		"no-implicit-dependencies": true,
		"ban-types": {
			"options": [
				[
					"Object",
					"Avoid using the `Object` type. Prefer `object`, which doesn't allow primitives."
				],
				[
					"Function",
					"Avoid using the `Function` type. Prefer a specific function type, like `() => void`."
				],
				[
					"Boolean",
					"Avoid using the `Boolean` type. Prefer `boolean`, which is the primitive boolean type."
				],
				[
					"Number",
					"Avoid using the `Number` type. Prefer `number`, which is the primitive number type."
				],
				[
					"String",
					"Avoid using the `String` type. Prefer `string`, which is the primitive string type."
				],
				[
					"Symbol",
					"Avoid using the `Symbol` type. Prefer `symbol`, which is the primitive symbol type."
				]
			]
		},
		"no-empty": false,
		"array-type": [
			true,
			"array"
		],
		"arrow-return-shorthand": true,
		"member-access": [
			true,
			"check-constructor",
			"check-accessor",
			"check-parameter-property"
		],
		"binary-expression-operand-order": false,
		"quotemark": [
			true,
			"double"
    ],
    "newline-before-return": false,
		"no-for-in-array": true,
		"no-increment-decrement": false,
		"max-func-body-length": false,
		"cyclomatic-complexity": false,
		"indent": [
			true,
			"spaces",
			4
		],
		"max-line-length": false,
		"typedef": [
			true,
			"parameter",
			"property-declaration",
			"member-variable-declaration"
		]
	}
}